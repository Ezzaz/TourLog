<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="7dp"
    android:layout_margin="4dp"
    app:contentPadding="3dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImageForum"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_above="@+id/userName"
                android:layout_alignParentStart="true"
                android:layout_marginStart="33dp"
                android:src="@drawable/profile"
                app:civ_border_color="#FF000000" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/forumsUser"
                    android:textColor="#000000"
                    android:text="User Name"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ForumsEmail"
                    android:text="user@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="2dp"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:id="@+id/postText"
            android:textColor="#000000"
            android:padding="10dp"
            android:text="this is my review post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/like_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:background="#b5d8f9"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/like_flat"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <ImageButton
                android:id="@+id/dislike_btn"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:background="#b5d8f9"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/dislike_flat"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>